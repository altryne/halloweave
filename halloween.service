[Unit]
Description=Halloween Project Bootstrap
After=bluetooth.target network.target pulseaudio.service
Wants=pulseaudio.service

[Service]
Type=simple
ExecStart=/home/altryne/halloweave/halloween_bootstrap.sh
WorkingDirectory=/home/altryne/halloweave
User=altryne
Group=audio
Environment=XDG_RUNTIME_DIR=/run/user/1000
Environment=PULSE_RUNTIME_PATH=/run/user/1000/pulse
Restart=on-failure
RestartSec=10
StandardOutput=append:/home/altryne/halloweave/halloween_app.log
StandardError=append:/home/altryne/halloweave/halloween_app.log

[Install]
WantedBy=multi-user.target
